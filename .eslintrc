{
  "extends": [
    "next",
    "prettier",
    "next/core-web-vitals"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "singleQuote": true,
        "trailingComma": "all",
        "semi": true,
        "tabWidth": 2
      }
    ],
    "@next/next/no-img-element": "off"
  }
}
